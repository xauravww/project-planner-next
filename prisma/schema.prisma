generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  embedding   String?   // JSON array of embeddings
  staleStatus String?   // JSON: tracks which modules are stale due to dependency changes
  
  requirements    Requirement[]
  architecture    Architecture?
  workflows       Workflow[]
  userStories     UserStory[]
  techStack       TechStack?
  
  // New Modules
  tasks           Task[]
  personas        Persona[]
  userJourneys    UserJourney[]
  mockups         Mockup[]
  businessRules   BusinessRule[]
  members         Member[]
  
  // Context and Chat
  contexts        ProjectContext[]
  chatMessages    ChatMessage[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Requirement {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title     String
  content   String
  type      String
  priority  String
  embedding String?  // JSON array of embeddings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Architecture {
  id        String   @id @default(cuid())
  projectId String   @unique
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // Core content (generated initially)
  content   String   // Overview and summary
  highLevel String?  // High-level architecture description
  lowLevel  String?  // Low-level component details
  functionalDecomposition String?  // Functional breakdown
  
  // Diagram fields (generated on-demand)
  systemDiagram      String?  // Main system architecture (Mermaid)
  erDiagram          String?  // Database ER diagram (Mermaid)
  sequenceDiagrams   String?  // API sequence diagrams (JSON array of Mermaid diagrams)
  dataFlowDiagram    String?  // Data flow diagram (Mermaid)
  deploymentDiagram  String?  // Infrastructure/deployment (Mermaid)
  componentDiagram   String?  // Component relationships (Mermaid)
  
  // Structured data (generated on-demand)
  databaseSchema String?  // JSON: { tables: [{ name, fields, relationships }] }
  apiSpec        String?  // JSON: { endpoints: [{ method, path, request, response }] }
  techStack      String?  // JSON: { frontend, backend, database, infrastructure }
  securityDesign String?  // Security architecture details
  scalingStrategy String?  // Scalability approach
  
  embedding String?  // Shared embedding for all sections
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Workflow {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title     String
  content   String
  diagram   String?
  embedding String?  // JSON array of embeddings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserStory {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title     String
  content   String
  acceptanceCriteria String?
  priority  String
  storyPoints Int?
  embedding String?  // JSON array of embeddings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TechStack {
  id        String   @id @default(cuid())
  projectId String   @unique
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  frontend  String?
  backend   String?
  database  String?
  devops    String?
  other     String?
  rationale String?  // Overall rationale for tech stack choices
  embedding String?  // JSON array of embeddings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// NEW MODELS

model Task {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title       String
  description String?
  status      String   @default("TODO") // TODO, IN_PROGRESS, DONE
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH
  assignee    String?
  dueDate     DateTime?
  embedding   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Persona {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name        String
  role        String
  goals       String   // JSON array or text
  frustrations String  // JSON array or text
  bio         String
  embedding   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserJourney {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title       String
  personaId   String?
  steps       String   // JSON array of steps
  embedding   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Mockup {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  prompt      String
  imageUrl    String
  code        String?  // Generated HTML/CSS/JS code
  status      String   @default("GENERATED")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BusinessRule {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title       String
  description String
  condition   String?
  action      String?
  embedding   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Member {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name        String
  role        String
  email       String
  avatar      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProjectContext {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  questionId  String   // Unique identifier for the question (e.g., "tech_stack_preference")
  question    String   // The question text
  answers     String   // JSON array of selected answers
  module      String   // Which module this was asked in (requirements, architecture, etc.)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([projectId, questionId])
  @@index([projectId, module])
}

model ChatMessage {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  module      String   // Which module the chat is for (requirements, architecture, etc.)
  role        String   // user, assistant, system
  content     String
  createdAt   DateTime @default(now())
  
  @@index([projectId, module])
}
